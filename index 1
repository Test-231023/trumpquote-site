    <script>
        async function fetchLatestTrumpQuote() {
            const apiKey = a03b9442e36343cab910cded787ad06e; // Replace with your actual NewsAPI key
            const url = `https://newsapi.org/v2/everything?q=Donald+Trump&language=en&sortBy=publishedAt&apiKey=${apiKey}`;

            try {
                let response = await fetch(url);
                let data = await response.json();

                if (data.articles && data.articles.length > 0) {
                    let latestArticle = data.articles[0]; // Get the latest article
                    let title = latestArticle.title; // Extract headline
                    let source = latestArticle.source.name; // Get source name
                    let quoteText = `"${title}" - ${source}`;

                    document.getElementById('quote').innerText = quoteText;
                } else {
                    document.getElementById('quote').innerText = "No recent quotes found.";
                }
            } catch (error) {
                document.getElementById('quote').innerText = "Could not fetch latest quote.";
            }
        }

        window.onload = fetchLatestTrumpQuote;
    </script>
